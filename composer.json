{
    "require-dev": {
        "simpletest/simpletest": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
    ,
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
    ,
    "scripts": {
        "tests:all": "php tests/run_all.php",
        "tests:single": [
            "php tests/TestOfHelloUsingAutoloader.php",
            "php tests/TestOfHelloUsingDirectIncludes.php"
        ]
    }
}
